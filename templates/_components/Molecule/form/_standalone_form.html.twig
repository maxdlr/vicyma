{% set object = form.vars.value %}
{% set buttons = [
    save ? include('_components/Atom/_button.html.twig', {type: 'submit', label: 'Enregistrer', icon: 'floppy-fill'}) : '',
] %}
{% set deleteButton = delete ? include('_components/Atom/_deleteButton.html.twig', {label: 'Supprimer', icon: 'trash-fill', colorClass: 'danger'}) : '' %}

<section class="row">
    <div class="row sticky-top pt-3 pb-5 bg-light rounded-3 bg-opacity-75">
        <h2 class="text-center col-md-6 p-0 m-0">{{ reference|default('Ajouter une reference') }}</h2>
        <div class="d-flex justify-content-center align-items-center col-md-6">
            {{ deleteButton|raw }}
            {{ form_start(form) }}
            <div class="d-flex justify-content-center align-items-center">
                {% for button in buttons %}
                    {% if button is not empty %}
                        <div class="mx-2">
                            {{ button|raw }}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    {% if options is defined %}
        <div class="col-sm-4">
            <div class="row">
                {% for option in options %}
                    <div class="col-6 col-sm-12">
                        {{ option|raw }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}


    {% if fields is defined %}
        <div class="{{ options is defined ? 'col-sm-8' : '' }}">
            {% for field in fields %}
                <div class="py-1">
                    {{ field|raw }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
    {{ form_end(form) }}
</section>
