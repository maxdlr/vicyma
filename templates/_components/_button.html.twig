<button class="btn {{ size is defined ? 'btn-'~size : '' }} btn-{{ colorClass|default('primary') }}">
    {% if icon is defined %}
        <span class="px-2"><i class="bi bi-{{ icon }}"></i></span>
    {% endif %}
    {% if label is defined %}
        <span class="px-2">{{ label }}</span>
    {% endif %}
</button>